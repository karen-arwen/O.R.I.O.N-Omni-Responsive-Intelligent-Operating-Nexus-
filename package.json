{
  "name": "orion",
  "version": "0.0.1",
  "private": true,
  "description": "O.R.I.O.N - Omni-Responsive Intelligent Operating Nexus",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "dev:api": "tsx apps/api/src/server.ts",
    "dev:web": "cd apps/web && next dev --hostname 0.0.0.0 --port 3001",
    "start:web": "cd apps/web && next start --hostname 0.0.0.0 --port 3001",
    "build:web": "cd apps/web && next build",
    "lint:web": "cd apps/web && next lint",
    "typecheck:web": "cd apps/web && tsc --noEmit",
    "test:e2e": "npm run build:web && cd apps/web && playwright test",
    "lint:api": "tsc --noEmit --project apps/api/tsconfig.json",
    "typecheck:api": "tsc --noEmit --project apps/api/tsconfig.json",
    "build:api": "tsc --project apps/api/tsconfig.json --outDir dist/api",
    "migrate:api": "tsx apps/api/scripts/migrate.ts",
    "dev:infra": "docker compose -f docker-compose.dev.yml up -d postgres redis",
    "test:integration": "node scripts/run-integration.js",
    "verify:fast": "npm run lint:web && npm run typecheck:web && npm run lint:api && npm run typecheck:api && npm run test",
    "verify:full": "npm run verify:fast && npm run build:web && npm run build:api",
    "verify": "npm run verify:full",
    "dev:worker": "tsx apps/worker/src/index.ts",
    "build:worker": "tsc --project apps/worker/tsconfig.json --outDir dist/worker",
    "worker": "node dist/worker/index.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-next": "13.5.6",
    "next": "13.5.6",
    "pg-mem": "^3.0.5",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-virtual": "^3.0.0-beta.66",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.0",
    "date-fns": "^3.0.6",
    "fastify": "^4.26.2",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.0.3",
    "ioredis": "^5.4.1",
    "lucide-react": "^0.292.0",
    "next-themes": "^0.2.1",
    "pg": "^8.11.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.9.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^1.14.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  }
}
